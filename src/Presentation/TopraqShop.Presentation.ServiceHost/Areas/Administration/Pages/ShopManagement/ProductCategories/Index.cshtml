@page
@model TopraqShop.Presentation.ServiceHost.Areas.Administration.Pages.ShopManagement.ProductCategories.IndexModel
@{
    ViewData["Title"] = "Product Categories";
    Layout = "Shared/_AdminLayout";
}


<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title pull-left">@ViewData["Title"]</h4>
        <p class="pull-right">
            <a class="btn btn-success btn-lg" href="#showmodal=@Url.Page("./index", "Create")">Create New Product Category</a>
        </p>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Search</h3>
            </div>
            <div class="panel-body">
                <form class="form-inline" role="form" method="get">
                    <div class="form-group">
                        <label asp-for="SearchModel.Name" class="sr-only"></label>
                        <input asp-for="SearchModel.Name" class="form-control" placehodler="Category Name"/>
                    </div>
                    <button class="btn btn-success waves-effect waves-light m-l-10" type="submit">Search</button>
                    <a class="btn btn-primary waves-effect waves-light m-l-10" asp-page="./Index">Show All</a>
                </form>
            </div>
        </div>
    </div>
</div>


<div class="row" id="ProductCategoresDiv">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Product Category List</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12 table-responsive">
                        <table class="table table-striped table-bordered table-full" id="productCategoryTable">
                            <thead>
                            <tr>
                                <td>#</td>
                                <td>Image</td>
                                <td>Name</td>
                                <td>Created On</td>
                                <td>Modified On</td>
                                <td>Actions</td>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var productCategory in @Model.ProductCategories)
                            {
                                <tr>
                                    <td>@productCategory.Id</td>
                                    <td>
                                        <img src="@productCategory.Picture" style="width: 70px; height: 70px;"/>
                                    </td>
                                    <td>
                                        @productCategory.Name
                                        <a href="#showmodal=@Url.Page("./Index", "Edit", new {id = @productCategory.Id})"><i class="md md-launch"></i></a>
                                    </td>
                                    <td>@productCategory.CreatedOn</td>
                                    <td>@productCategory.ModifiedOn</td>
                                    <td>
                                        @* <a class="btn btn-warning pull-left waves-effect waves-light m-l-15 m-r-15">
            <i class="fa fa-edit"></i>Edit
        </a>*@
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/AdminTheme/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/AdminTheme/assets/datatables/dataTables.bootstrap.js"></script>
    <script type="text/javascript">
        var resizefunc = [];
        $(document).ready(function() {
            $('#productCategoryTable').dataTable();
        });
    </script>
}